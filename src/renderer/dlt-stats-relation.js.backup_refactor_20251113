/**
 * å¤§ä¹é€ç»Ÿè®¡å…³ç³»åˆ†æé¢æ¿
 * åŠŸèƒ½ï¼šé€‰æ‹©çƒ­æ¸©å†·æ¯”ï¼Œç»Ÿè®¡åŒæ—¶å‡ºç°çš„å’Œå€¼ã€è·¨åº¦ã€åŒºé—´æ¯”ã€ACå€¼çš„é«˜é¢‘ç»„åˆ
 */

// å…¨å±€å˜é‡ï¼šå­˜å‚¨å½“å‰åˆ†æç»“æœ
let currentStatsData = null;

/**
 * åˆå§‹åŒ–ç»Ÿè®¡å…³ç³»åˆ†æé¢æ¿
 */
function initDLTStatsRelation() {
    console.log('åˆå§‹åŒ–å¤§ä¹é€ç»Ÿè®¡å…³ç³»åˆ†æé¢æ¿');

    const panel = document.getElementById('dlt-stats-relation');
    if (!panel) {
        console.error('ç»Ÿè®¡å…³ç³»åˆ†æé¢æ¿æœªæ‰¾åˆ°');
        return;
    }

    // ç»‘å®šå­å¯¼èˆªæŒ‰é’®ï¼ˆé¢æ¿åˆ‡æ¢ï¼‰
    bindSubNavButtons();

    // ç»‘å®šå¿«æ·é€‰æ‹©æŒ‰é’®ï¼ˆçƒ­æ¸©å†·æ¯”ï¼‰
    bindQuickSelectButtons();

    // ç»‘å®šå…¨é€‰æŒ‰é’®ï¼ˆçƒ­æ¸©å†·æ¯” + åŒºé—´æ¯”ï¼‰
    bindSelectAllButtons();

    // ç»‘å®šæ¸…ç©ºé€‰æ‹©æŒ‰é’®ï¼ˆçƒ­æ¸©å†·æ¯”ï¼‰
    bindClearSelectButton();

    // ç»‘å®šåŒºé—´æ¯”å¿«é€‰æŒ‰é’®
    bindZoneQuickSelectButtons();

    // ç»‘å®šåŒºé—´æ¯”æ¸…ç©ºæŒ‰é’®
    bindZoneClearSelectButton();

    // ç»‘å®šèŒƒå›´é€‰æ‹©åˆ‡æ¢ï¼ˆçƒ­æ¸©å†·æ¯”ï¼‰
    bindRangeSelector();

    // ç»‘å®šåŒºé—´æ¯”èŒƒå›´é€‰æ‹©åˆ‡æ¢
    bindZoneRangeSelector();

    // ç»‘å®šåˆ†ææŒ‰é’®ï¼ˆçƒ­æ¸©å†·æ¯”ï¼‰
    bindAnalyzeButton();

    // ç»‘å®šåŒºé—´æ¯”åˆ†ææŒ‰é’®
    bindZoneAnalyzeButton();

    // ç»‘å®šé‡ç½®æŒ‰é’®ï¼ˆçƒ­æ¸©å†·æ¯”ï¼‰
    bindResetButton();

    // ç»‘å®šåŒºé—´æ¯”é‡ç½®æŒ‰é’®
    bindZoneResetButton();
}

/**
 * ç»‘å®šå­å¯¼èˆªæŒ‰é’®ï¼ˆé¢æ¿åˆ‡æ¢ï¼‰
 */
function bindSubNavButtons() {
    const subNavBtns = document.querySelectorAll('.stats-sub-nav-btn');

    subNavBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            const targetPanel = btn.dataset.panel;

            // ç§»é™¤æ‰€æœ‰æŒ‰é’®çš„ active çŠ¶æ€
            subNavBtns.forEach(b => b.classList.remove('active'));

            // æ·»åŠ å½“å‰æŒ‰é’®çš„ active çŠ¶æ€
            btn.classList.add('active');

            // éšè—æ‰€æœ‰é¢æ¿
            document.querySelectorAll('.stats-analysis-panel').forEach(panel => {
                panel.classList.remove('active');
            });

            // æ˜¾ç¤ºç›®æ ‡é¢æ¿
            const panel = document.getElementById(targetPanel + '-panel');
            if (panel) {
                panel.classList.add('active');
                console.log(`åˆ‡æ¢åˆ°é¢æ¿: ${targetPanel}`);
            } else {
                console.error(`é¢æ¿æœªæ‰¾åˆ°: ${targetPanel}`);
            }
        });
    });
}

/**
 * ç»‘å®šå¿«æ·é€‰æ‹©æŒ‰é’®
 */
function bindQuickSelectButtons() {
    const quickBtns = document.querySelectorAll('.quick-select-btn');

    quickBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            const type = btn.dataset.type;
            const checkboxes = document.querySelectorAll('.hwc-ratio-checkbox');

            // å…ˆæ¸…ç©ºæ‰€æœ‰é€‰æ‹©
            checkboxes.forEach(cb => cb.checked = false);

            // æ ¹æ®ç±»å‹é€‰æ‹©å¯¹åº”çš„çƒ­æ¸©å†·æ¯”
            const selections = getQuickSelections(type);
            checkboxes.forEach(cb => {
                if (selections.includes(cb.value)) {
                    cb.checked = true;
                }
            });
        });
    });
}

/**
 * è·å–å¿«æ·é€‰æ‹©çš„çƒ­æ¸©å†·æ¯”åˆ—è¡¨
 */
function getQuickSelections(type) {
    const selections = {
        hot: ['5:0:0', '4:1:0', '4:0:1', '3:2:0', '3:1:1', '3:0:2'], // çƒ­å·ä¸ºä¸»
        warm: ['0:5:0', '1:4:0', '2:3:0', '0:4:1', '1:3:1'], // æ¸©å·ä¸ºä¸»
        cold: ['0:0:5', '1:0:4', '0:1:4', '2:0:3', '0:2:3', '1:1:3'], // å†·å·ä¸ºä¸»
        balanced: ['2:2:1', '2:1:2', '1:2:2', '3:1:1', '1:3:1', '1:1:3'] // å‡è¡¡å‹
    };

    return selections[type] || [];
}

/**
 * ç»‘å®šæ¸…ç©ºé€‰æ‹©æŒ‰é’®
 */
function bindClearSelectButton() {
    const clearBtn = document.querySelector('.clear-select-btn');

    if (clearBtn) {
        clearBtn.addEventListener('click', () => {
            document.querySelectorAll('.hwc-ratio-checkbox').forEach(cb => {
                cb.checked = false;
            });
        });
    }
}

/**
 * ç»‘å®šå…¨é€‰æŒ‰é’®ï¼ˆçƒ­æ¸©å†·æ¯” + åŒºé—´æ¯”ï¼‰
 */
function bindSelectAllButtons() {
    // çƒ­æ¸©å†·æ¯”åˆ†æçš„å…¨é€‰æŒ‰é’®
    const hwcSelectAllBtn = document.querySelector('#hwc-analysis-panel .select-all-btn');
    if (hwcSelectAllBtn) {
        hwcSelectAllBtn.addEventListener('click', () => {
            document.querySelectorAll('.hwc-ratio-checkbox').forEach(cb => {
                cb.checked = true;
            });
        });
    }

    // åŒºé—´æ¯”åˆ†æçš„å…¨é€‰æŒ‰é’®
    const zoneSelectAllBtn = document.querySelector('#zone-analysis-panel .select-all-btn');
    if (zoneSelectAllBtn) {
        zoneSelectAllBtn.addEventListener('click', () => {
            document.querySelectorAll('.zone-ratio-checkbox').forEach(cb => {
                cb.checked = true;
            });
        });
    }
}

/**
 * ç»‘å®šåŒºé—´æ¯”å¿«é€‰æŒ‰é’®
 */
function bindZoneQuickSelectButtons() {
    const zoneQuickBtns = document.querySelectorAll('.zone-quick-btn');

    zoneQuickBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            const type = btn.dataset.type;
            const checkboxes = document.querySelectorAll('.zone-ratio-checkbox');

            // å…ˆæ¸…ç©ºæ‰€æœ‰é€‰æ‹©
            checkboxes.forEach(cb => cb.checked = false);

            // æ ¹æ®ç±»å‹é€‰æ‹©å¯¹åº”çš„åŒºé—´æ¯”
            const selections = getZoneQuickSelections(type);
            checkboxes.forEach(cb => {
                if (selections.includes(cb.value)) {
                    cb.checked = true;
                }
            });
        });
    });
}

/**
 * è·å–åŒºé—´æ¯”å¿«æ·é€‰æ‹©çš„åˆ—è¡¨
 */
function getZoneQuickSelections(type) {
    const selections = {
        front: ['5:0:0', '4:1:0', '4:0:1', '3:2:0', '3:1:1', '3:0:2'], // å‰åŒºé›†ä¸­
        middle: ['0:5:0', '1:4:0', '2:3:0', '0:4:1', '1:3:1'], // ä¸­åŒºé›†ä¸­
        back: ['0:0:5', '1:0:4', '0:1:4', '2:0:3', '0:2:3', '1:1:3'], // ååŒºé›†ä¸­
        balanced: ['2:2:1', '2:1:2', '1:2:2', '3:1:1', '1:3:1', '1:1:3'] // å‡è¡¡å‹
    };

    return selections[type] || [];
}

/**
 * ç»‘å®šåŒºé—´æ¯”æ¸…ç©ºé€‰æ‹©æŒ‰é’®
 */
function bindZoneClearSelectButton() {
    const zoneClearBtn = document.querySelector('.zone-clear-btn');

    if (zoneClearBtn) {
        zoneClearBtn.addEventListener('click', () => {
            document.querySelectorAll('.zone-ratio-checkbox').forEach(cb => {
                cb.checked = false;
            });
        });
    }
}

/**
 * ç»‘å®šèŒƒå›´é€‰æ‹©å™¨
 */
function bindRangeSelector() {
    const radioInputs = document.querySelectorAll('input[name="stats-range"]');
    const customInputsDiv = document.querySelector('.custom-range-inputs');

    radioInputs.forEach(radio => {
        radio.addEventListener('change', (e) => {
            if (e.target.value === 'custom') {
                customInputsDiv.style.display = 'flex';
            } else {
                customInputsDiv.style.display = 'none';
            }
        });
    });
}

/**
 * ç»‘å®šåˆ†ææŒ‰é’®
 */
function bindAnalyzeButton() {
    const analyzeBtn = document.getElementById('start-stats-analyze');

    if (analyzeBtn) {
        analyzeBtn.addEventListener('click', async () => {
            await executeStatsAnalysis();
        });
    }
}

/**
 * ç»‘å®šé‡ç½®æŒ‰é’®
 */
function bindResetButton() {
    const resetBtn = document.getElementById('reset-stats-condition');

    if (resetBtn) {
        resetBtn.addEventListener('click', () => {
            // æ¸…ç©ºæ‰€æœ‰å¤é€‰æ¡†
            document.querySelectorAll('.hwc-ratio-checkbox').forEach(cb => cb.checked = false);

            // é‡ç½®èŒƒå›´é€‰æ‹©ä¸º"æœ€è¿‘30æœŸ"
            document.querySelector('input[name="stats-range"][value="30"]').checked = true;
            document.querySelector('.custom-range-inputs').style.display = 'none';

            // æ¸…ç©ºè‡ªå®šä¹‰æœŸå·è¾“å…¥
            document.getElementById('stats-start-issue').value = '';
            document.getElementById('stats-end-issue').value = '';

            // éšè—ç»“æœé¢æ¿
            document.getElementById('stats-result-panel').style.display = 'none';
            currentStatsData = null;
        });
    }
}

/**
 * æ‰§è¡Œç»Ÿè®¡åˆ†æ
 */
async function executeStatsAnalysis() {
    // 1. æ”¶é›†é€‰ä¸­çš„çƒ­æ¸©å†·æ¯”
    const selectedRatios = Array.from(document.querySelectorAll('.hwc-ratio-checkbox:checked'))
        .map(cb => cb.value);

    if (selectedRatios.length === 0) {
        alert('è¯·è‡³å°‘é€‰æ‹©ä¸€ä¸ªçƒ­æ¸©å†·æ¯”');
        return;
    }

    // 2. è·å–åˆ†æèŒƒå›´
    const rangeValue = document.querySelector('input[name="stats-range"]:checked').value;
    let apiUrl = 'http://localhost:3003/api/dlt/stats-relation?';

    if (rangeValue === 'custom') {
        const startIssue = document.getElementById('stats-start-issue').value.trim();
        const endIssue = document.getElementById('stats-end-issue').value.trim();

        if (!startIssue || !endIssue) {
            alert('è¯·è¾“å…¥èµ·å§‹æœŸå·å’Œç»“æŸæœŸå·');
            return;
        }

        if (!/^\d{5}$/.test(startIssue) || !/^\d{5}$/.test(endIssue)) {
            alert('æœŸå·æ ¼å¼ä¸æ­£ç¡®ï¼Œåº”ä¸º5ä½æ•°å­—ï¼ˆå¦‚ï¼š25001ï¼‰');
            return;
        }

        if (startIssue > endIssue) {
            alert('èµ·å§‹æœŸå·ä¸èƒ½å¤§äºç»“æŸæœŸå·');
            return;
        }

        apiUrl += `startIssue=${startIssue}&endIssue=${endIssue}`;
    } else {
        // æœ€è¿‘XXæœŸ - ä»è¾“å…¥æ¡†è¯»å–æœŸæ•°
        const recentCount = document.getElementById('stats-recent-count').value;
        const periodsNum = parseInt(recentCount);

        if (isNaN(periodsNum) || periodsNum <= 0) {
            alert('è¯·è¾“å…¥æœ‰æ•ˆçš„æœŸæ•°ï¼ˆå¤§äº0çš„æ•°å­—ï¼‰');
            return;
        }

        apiUrl += `periods=${periodsNum}`;
    }

    apiUrl += `&hwcRatios=${selectedRatios.join(',')}`;

    console.log('ç»Ÿè®¡åˆ†æAPI:', apiUrl);
    console.log('é€‰ä¸­çš„çƒ­æ¸©å†·æ¯”:', selectedRatios);

    // 3. æ˜¾ç¤ºåŠ è½½çŠ¶æ€
    showStatsLoading();

    try {
        // 4. è°ƒç”¨åç«¯API
        const response = await fetch(apiUrl);

        if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
        }

        const data = await response.json();

        if (data.error) {
            throw new Error(data.error);
        }

        console.log('ç»Ÿè®¡åˆ†æç»“æœ:', data);

        // 5. ä¿å­˜ç»“æœå¹¶æ˜¾ç¤º
        currentStatsData = data;
        displayStatsResult(data);

    } catch (error) {
        console.error('ç»Ÿè®¡åˆ†æå¤±è´¥:', error);
        showStatsError(error.message);
    }
}

/**
 * æ˜¾ç¤ºåŠ è½½çŠ¶æ€
 */
function showStatsLoading() {
    const resultPanel = document.getElementById('stats-result-panel');
    resultPanel.style.display = 'block';
    resultPanel.innerHTML = `
        <div style="text-align: center; padding: 60px 20px;">
            <div style="display: inline-block; width: 50px; height: 50px; border: 4px solid #f3f3f3; border-top: 4px solid #007bff; border-radius: 50%; animation: spin 1s linear infinite;"></div>
            <p style="margin-top: 20px; font-size: 16px; color: #6c757d;">æ­£åœ¨åˆ†ææ•°æ®ï¼Œè¯·ç¨å€™...</p>
        </div>
        <style>
            @keyframes spin {
                0% { transform: rotate(0deg); }
                100% { transform: rotate(360deg); }
            }
        </style>
    `;
}

/**
 * æ˜¾ç¤ºé”™è¯¯ä¿¡æ¯
 */
function showStatsError(message) {
    const resultPanel = document.getElementById('stats-result-panel');
    resultPanel.style.display = 'block';
    resultPanel.innerHTML = `
        <div class="stats-empty-state">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="12"></line>
                <line x1="12" y1="16" x2="12.01" y2="16"></line>
            </svg>
            <h4>åˆ†æå¤±è´¥</h4>
            <p>${message}</p>
        </div>
    `;
}

/**
 * æ˜¾ç¤ºç»Ÿè®¡ç»“æœ
 */
function displayStatsResult(data) {
    const resultPanel = document.getElementById('stats-result-panel');
    resultPanel.style.display = 'block';

    const { totalRecords, matchedRecords, hwcRatios, topStats, detailRecords } = data;

    // å¦‚æœæ²¡æœ‰åŒ¹é…æ•°æ®
    if (matchedRecords === 0) {
        resultPanel.innerHTML = `
            <div class="stats-empty-state">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="M16 16s-1.5-2-4-2-4 2-4 2"></path>
                    <line x1="9" y1="9" x2="9.01" y2="9"></line>
                    <line x1="15" y1="9" x2="15.01" y2="9"></line>
                </svg>
                <h4>æœªæ‰¾åˆ°ç¬¦åˆæ¡ä»¶çš„æ•°æ®</h4>
                <p>åœ¨åˆ†æçš„ <strong>${totalRecords}</strong> æœŸæ•°æ®ä¸­ï¼Œæ²¡æœ‰æ‰¾åˆ°çƒ­æ¸©å†·æ¯”ä¸º <strong style="color: #007bff;">${hwcRatios.join(', ')}</strong> çš„å¼€å¥–è®°å½•</p>
                <p style="margin-top: 12px; font-size: 13px; color: #6c757d;">
                    ğŸ’¡ æç¤ºï¼šå¯ä»¥å°è¯•é€‰æ‹©å…¶ä»–çƒ­æ¸©å†·æ¯”ï¼Œæˆ–æ‰©å¤§åˆ†æèŒƒå›´ï¼ˆå¦‚ï¼šæœ€è¿‘100æœŸï¼‰
                </p>
            </div>
        `;
        return;
    }

    // æ„å»ºç»“æœHTML
    let html = `
        <div class="stats-result-header">
            <h3>ğŸ“Š ç»Ÿè®¡åˆ†æç»“æœ</h3>
            <div class="stats-result-summary">
                åˆ†æèŒƒå›´ï¼š<strong>${totalRecords}</strong> æœŸæ•°æ® |
                ç¬¦åˆçƒ­æ¸©å†·æ¯” <strong style="color: #007bff;">${hwcRatios.join(', ')}</strong> çš„æœŸæ•°ï¼š<strong>${matchedRecords}</strong> æœŸ
            </div>
        </div>

        <div class="stats-top6-grid">
            ${generateTop6Card('å‰åŒºå’Œå€¼', topStats.frontSum)}
            ${generateTop6Card('å‰åŒºè·¨åº¦', topStats.frontSpan)}
            ${generateTop6Card('çƒ­æ¸©å†·æ¯”', topStats.hwcRatio)}
            ${generateTop6Card('åŒºé—´æ¯”', topStats.zoneRatio)}
            ${generateTop6Card('ACå€¼', topStats.acValue)}
            ${generateTop6Card('å‰åŒºå¥‡å¶æ¯”', topStats.oddEvenRatio)}
        </div>

        <div class="stats-detail-section">
            <h4>ğŸ“‹ è¯¦ç»†æ•°æ®åˆ—è¡¨</h4>
            <div class="stats-detail-actions">
                <button class="export-csv-btn" onclick="exportStatsToCSV()">ğŸ“¥ å¯¼å‡ºCSV</button>
            </div>
            ${generateDetailTable(detailRecords)}
        </div>
    `;

    resultPanel.innerHTML = html;
}

/**
 * ç”ŸæˆTOP6å¡ç‰‡HTML
 */
function generateTop6Card(title, data) {
    if (!data || data.length === 0) {
        return `
            <div class="stats-top6-card">
                <h5>${title}</h5>
                <div class="stats-value-list">
                    <div style="text-align: center; padding: 20px; color: #6c757d;">æš‚æ— æ•°æ®</div>
                </div>
            </div>
        `;
    }

    const valueItems = data.map(item => `
        <div class="stats-value-item">
            <span class="stats-value-label">${item.value}</span>
            <span class="stats-value-count">${item.count}æ¬¡</span>
        </div>
    `).join('');

    return `
        <div class="stats-top6-card">
            <h5>${title}</h5>
            <div class="stats-value-list">
                ${valueItems}
            </div>
        </div>
    `;
}

/**
 * ç”Ÿæˆè¯¦ç»†æ•°æ®è¡¨æ ¼HTML
 */
function generateDetailTable(records) {
    if (!records || records.length === 0) {
        return '<p style="text-align: center; color: #6c757d;">æš‚æ— è¯¦ç»†æ•°æ®</p>';
    }

    const rows = records.map(record => `
        <tr>
            <td>${record.issue}</td>
            <td>${record.frontBalls ? record.frontBalls.map(n => String(n).padStart(2, '0')).join(', ') : '-'}</td>
            <td>${record.frontSum || '-'}</td>
            <td>${record.frontSpan || '-'}</td>
            <td><strong>${record.hwcRatio || '-'}</strong></td>
            <td>${record.zoneRatio || '-'}</td>
            <td>${record.acValue !== undefined ? record.acValue : '-'}</td>
            <td>${record.oddEvenRatio || '-'}</td>
        </tr>
    `).join('');

    return `
        <div style="max-height: 500px; overflow-y: auto; border: 1px solid #dee2e6; border-radius: 6px;">
            <table class="stats-detail-table">
                <thead>
                    <tr>
                        <th>æœŸå·</th>
                        <th>å‰åŒºå·ç </th>
                        <th>å’Œå€¼</th>
                        <th>è·¨åº¦</th>
                        <th>çƒ­æ¸©å†·æ¯”</th>
                        <th>åŒºé—´æ¯”</th>
                        <th>ACå€¼</th>
                        <th>å‰åŒºå¥‡å¶æ¯”</th>
                    </tr>
                </thead>
                <tbody>
                    ${rows}
                </tbody>
            </table>
        </div>
    `;
}

/**
 * å¯¼å‡ºç»Ÿè®¡æ•°æ®ä¸ºCSV
 */
function exportStatsToCSV() {
    if (!currentStatsData || !currentStatsData.detailRecords) {
        alert('æ²¡æœ‰å¯å¯¼å‡ºçš„æ•°æ®');
        return;
    }

    const records = currentStatsData.detailRecords;

    // CSVè¡¨å¤´
    let csvContent = '\uFEFF'; // UTF-8 BOM
    csvContent += 'æœŸå·,å‰åŒºå·ç ,å’Œå€¼,è·¨åº¦,çƒ­æ¸©å†·æ¯”,åŒºé—´æ¯”,ACå€¼,å‰åŒºå¥‡å¶æ¯”\n';

    // CSVæ•°æ®è¡Œ
    records.forEach(record => {
        const frontBalls = record.frontBalls ? record.frontBalls.map(n => String(n).padStart(2, '0')).join(' ') : '';
        csvContent += `${record.issue},"${frontBalls}",${record.frontSum},${record.frontSpan},"${record.hwcRatio}","${record.zoneRatio}",${record.acValue},"${record.oddEvenRatio}"\n`;
    });

    // åˆ›å»ºä¸‹è½½é“¾æ¥
    const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
    const link = document.createElement('a');
    const url = URL.createObjectURL(blob);

    link.setAttribute('href', url);
    link.setAttribute('download', `å¤§ä¹é€ç»Ÿè®¡å…³ç³»_${new Date().toISOString().slice(0,10)}.csv`);
    link.style.visibility = 'hidden';

    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);

    console.log('CSVå¯¼å‡ºæˆåŠŸ');
}

// ==================== åŒºé—´æ¯”åˆ†æåŠŸèƒ½ ====================

// å…¨å±€å˜é‡ï¼šå­˜å‚¨å½“å‰åŒºé—´æ¯”åˆ†æç»“æœ
let currentZoneStatsData = null;

/**
 * ç»‘å®šåŒºé—´æ¯”èŒƒå›´é€‰æ‹©å™¨
 */
function bindZoneRangeSelector() {
    const radioInputs = document.querySelectorAll('input[name="zone-stats-range"]');
    const customInputsDiv = document.querySelector('.zone-custom-range-inputs');

    radioInputs.forEach(radio => {
        radio.addEventListener('change', (e) => {
            if (e.target.value === 'custom') {
                customInputsDiv.style.display = 'flex';
            } else {
                customInputsDiv.style.display = 'none';
            }
        });
    });
}

/**
 * ç»‘å®šåŒºé—´æ¯”åˆ†ææŒ‰é’®
 */
function bindZoneAnalyzeButton() {
    const analyzeBtn = document.getElementById('start-zone-stats-analyze');

    if (analyzeBtn) {
        analyzeBtn.addEventListener('click', async () => {
            await executeZoneStatsAnalysis();
        });
    }
}

/**
 * ç»‘å®šåŒºé—´æ¯”é‡ç½®æŒ‰é’®
 */
function bindZoneResetButton() {
    const resetBtn = document.getElementById('reset-zone-stats-condition');

    if (resetBtn) {
        resetBtn.addEventListener('click', () => {
            // æ¸…ç©ºæ‰€æœ‰å¤é€‰æ¡†
            document.querySelectorAll('.zone-ratio-checkbox').forEach(cb => cb.checked = false);

            // é‡ç½®èŒƒå›´é€‰æ‹©ä¸º"æœ€è¿‘100æœŸ"
            document.querySelector('input[name="zone-stats-range"][value="recent"]').checked = true;
            document.querySelector('.zone-custom-range-inputs').style.display = 'none';

            // æ¸…ç©ºè‡ªå®šä¹‰æœŸå·è¾“å…¥
            document.getElementById('zone-stats-start-issue').value = '';
            document.getElementById('zone-stats-end-issue').value = '';
            document.getElementById('zone-stats-recent-count').value = '100';

            // éšè—ç»“æœé¢æ¿
            document.getElementById('zone-stats-result-panel').style.display = 'none';
            currentZoneStatsData = null;
        });
    }
}

/**
 * æ‰§è¡ŒåŒºé—´æ¯”ç»Ÿè®¡åˆ†æ
 */
async function executeZoneStatsAnalysis() {
    // 1. æ”¶é›†é€‰ä¸­çš„åŒºé—´æ¯”
    const selectedRatios = Array.from(document.querySelectorAll('.zone-ratio-checkbox:checked'))
        .map(cb => cb.value);

    if (selectedRatios.length === 0) {
        alert('è¯·è‡³å°‘é€‰æ‹©ä¸€ä¸ªåŒºé—´æ¯”');
        return;
    }

    // 2. è·å–åˆ†æèŒƒå›´
    const rangeValue = document.querySelector('input[name="zone-stats-range"]:checked').value;
    let apiUrl = 'http://localhost:3003/api/dlt/zone-ratio-stats-relation?';

    if (rangeValue === 'custom') {
        const startIssue = document.getElementById('zone-stats-start-issue').value.trim();
        const endIssue = document.getElementById('zone-stats-end-issue').value.trim();

        if (!startIssue || !endIssue) {
            alert('è¯·è¾“å…¥èµ·å§‹æœŸå·å’Œç»“æŸæœŸå·');
            return;
        }

        if (!/^\d{5}$/.test(startIssue) || !/^\d{5}$/.test(endIssue)) {
            alert('æœŸå·æ ¼å¼ä¸æ­£ç¡®ï¼Œåº”ä¸º5ä½æ•°å­—ï¼ˆå¦‚ï¼š25001ï¼‰');
            return;
        }

        if (startIssue > endIssue) {
            alert('èµ·å§‹æœŸå·ä¸èƒ½å¤§äºç»“æŸæœŸå·');
            return;
        }

        apiUrl += `startIssue=${startIssue}&endIssue=${endIssue}`;
    } else {
        // æœ€è¿‘XXæœŸ
        const recentCount = document.getElementById('zone-stats-recent-count').value;
        const periodsNum = parseInt(recentCount);

        if (isNaN(periodsNum) || periodsNum <= 0) {
            alert('è¯·è¾“å…¥æœ‰æ•ˆçš„æœŸæ•°ï¼ˆå¤§äº0çš„æ•°å­—ï¼‰');
            return;
        }

        apiUrl += `periods=${periodsNum}`;
    }

    apiUrl += `&zoneRatios=${selectedRatios.join(',')}`;

    console.log('åŒºé—´æ¯”ç»Ÿè®¡åˆ†æAPI:', apiUrl);
    console.log('é€‰ä¸­çš„åŒºé—´æ¯”:', selectedRatios);

    // 3. æ˜¾ç¤ºåŠ è½½çŠ¶æ€
    showZoneStatsLoading();

    try {
        // 4. è°ƒç”¨åç«¯API
        const response = await fetch(apiUrl);

        if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
        }

        const data = await response.json();

        if (data.error) {
            throw new Error(data.error);
        }

        console.log('åŒºé—´æ¯”ç»Ÿè®¡åˆ†æç»“æœ:', data);

        // 5. ä¿å­˜ç»“æœå¹¶æ˜¾ç¤º
        currentZoneStatsData = data;
        displayZoneStatsResult(data);

    } catch (error) {
        console.error('åŒºé—´æ¯”ç»Ÿè®¡åˆ†æå¤±è´¥:', error);
        showZoneStatsError(error.message);
    }
}

/**
 * æ˜¾ç¤ºåŒºé—´æ¯”åˆ†æåŠ è½½çŠ¶æ€
 */
function showZoneStatsLoading() {
    const resultPanel = document.getElementById('zone-stats-result-panel');
    resultPanel.style.display = 'block';
    resultPanel.innerHTML = `
        <div style="text-align: center; padding: 60px 20px;">
            <div style="display: inline-block; width: 50px; height: 50px; border: 4px solid #f3f3f3; border-top: 4px solid #007bff; border-radius: 50%; animation: spin 1s linear infinite;"></div>
            <p style="margin-top: 20px; font-size: 16px; color: #6c757d;">æ­£åœ¨åˆ†ææ•°æ®ï¼Œè¯·ç¨å€™...</p>
        </div>
        <style>
            @keyframes spin {
                0% { transform: rotate(0deg); }
                100% { transform: rotate(360deg); }
            }
        </style>
    `;
}

/**
 * æ˜¾ç¤ºåŒºé—´æ¯”åˆ†æé”™è¯¯ä¿¡æ¯
 */
function showZoneStatsError(message) {
    const resultPanel = document.getElementById('zone-stats-result-panel');
    resultPanel.style.display = 'block';
    resultPanel.innerHTML = `
        <div style="text-align: center; padding: 60px 20px;">
            <div style="font-size: 48px;">âŒ</div>
            <p style="margin-top: 20px; font-size: 16px; color: #dc3545;">åˆ†æå¤±è´¥: ${message}</p>
        </div>
    `;
}

/**
 * æ˜¾ç¤ºåŒºé—´æ¯”åˆ†æç»“æœ
 */
function displayZoneStatsResult(data) {
    const resultPanel = document.getElementById('zone-stats-result-panel');
    resultPanel.style.display = 'block';

    resultPanel.innerHTML = `
        <h3>ğŸ“Š åŒºé—´æ¯”åˆ†æç»“æœ</h3>

        <div class="stats-summary">
            <div class="summary-item">
                <span class="summary-label">æ•°æ®æ¥æº</span>
                <span class="summary-value">${data.dataSource === 'hit_dlts' ? 'ä¸»è¡¨(hit_dlts)' : 'å¤‡ä»½è¡¨(DLTRedMissing)'}</span>
            </div>
            <div class="summary-item">
                <span class="summary-label">æ€»è®°å½•æ•°</span>
                <span class="summary-value">${data.totalRecords} æœŸ</span>
            </div>
            <div class="summary-item">
                <span class="summary-label">åŒ¹é…è®°å½•æ•°</span>
                <span class="summary-value">${data.matchedRecords} æœŸ</span>
            </div>
            <div class="summary-item">
                <span class="summary-label">åŒ¹é…ç‡</span>
                <span class="summary-value success">${data.matchRate}%</span>
            </div>
        </div>

        <div class="stats-top6-grid">
            ${generateTop6Card('çƒ­æ¸©å†·æ¯”', data.topStats.hwcRatio)}
            ${generateTop6Card('å‰åŒºå’Œå€¼', data.topStats.frontSum)}
            ${generateTop6Card('å‰åŒºè·¨åº¦', data.topStats.frontSpan)}
            ${generateTop6Card('ACå€¼', data.topStats.acValue)}
            ${generateTop6Card('å‰åŒºå¥‡å¶æ¯”', data.topStats.oddEvenRatio)}
        </div>

        <div class="stats-actions">
            <button class="export-csv-btn" onclick="exportZoneStatsToCSV()">ğŸ“¥ å¯¼å‡ºCSV</button>
        </div>

        ${generateDetailTable(data.detailRecords)}
    `;
}

/**
 * å¯¼å‡ºåŒºé—´æ¯”åˆ†æç»“æœä¸ºCSV
 */
function exportZoneStatsToCSV() {
    if (!currentZoneStatsData) {
        alert('æ²¡æœ‰å¯å¯¼å‡ºçš„æ•°æ®');
        return;
    }

    const data = currentZoneStatsData;
    const records = data.detailRecords;

    // æ„å»ºCSVå†…å®¹
    let csvContent = '\uFEFF'; // UTF-8 BOM

    // æ ‡é¢˜è¡Œ
    csvContent += 'æœŸå·,æ—¥æœŸ,å‰åŒºå·ç ,ååŒºå·ç ,å‰åŒºå’Œå€¼,å‰åŒºè·¨åº¦,çƒ­æ¸©å†·æ¯”,åŒºé—´æ¯”,ACå€¼,å‰åŒºå¥‡å¶æ¯”\n';

    // æ•°æ®è¡Œ
    records.forEach(record => {
        csvContent += `${record.Issue},`;
        csvContent += `${record.Date || ''},`;
        csvContent += `"${record.FrontNumbers}",`;
        csvContent += `"${record.BackNumbers}",`;
        csvContent += `${record.FrontSum},`;
        csvContent += `${record.FrontSpan},`;
        csvContent += `${record.HWCRatio},`;
        csvContent += `${record.ZoneRatio},`;
        csvContent += `${record.ACValue},`;
        csvContent += `${record.OddEvenRatio}\n`;
    });

    // åˆ›å»ºä¸‹è½½é“¾æ¥
    const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
    const link = document.createElement('a');
    const url = URL.createObjectURL(blob);

    link.setAttribute('href', url);
    link.setAttribute('download', `åŒºé—´æ¯”ç»Ÿè®¡åˆ†æ_${new Date().toISOString().slice(0,10)}.csv`);
    link.style.visibility = 'hidden';

    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);

    console.log('åŒºé—´æ¯”CSVå¯¼å‡ºæˆåŠŸ');
}

// å¯¼å‡ºå‡½æ•°ä¾›å¤–éƒ¨è°ƒç”¨
window.initDLTStatsRelation = initDLTStatsRelation;
window.exportStatsToCSV = exportStatsToCSV;
window.exportZoneStatsToCSV = exportZoneStatsToCSV;
